@model TodoMVC.Models.Todo

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Todo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Date
        </dt>
        <dd class = "col-sm-10">
            @Model.CreatedDate.ToString("dd-MM-yyyy")
        </dd>
        <dt class = "col-sm-2">
            Completed?
        </dt>
        <dd class = "col-sm-10">
            @if (Model.IsCompleted)
            {
                <span class="badge textwhite bg-success">Completed</span>
            }
            else
            {
                <span class="badge text-white bg-danger">Pending</span>
            }
        </dd>
    </dl>
</div>
<div>
    @if (!Model.IsCompleted)
    {
        <a class="btn btn-sm  btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">
            <i class="fa-solid fa-pencil"></i>
            Edit
        </a>
    }
    <a class="btn btn-sm btn-primary" asp-action="Index">
        <i class="fa-solid fa-arrow-left"></i>
        Back to List
    </a>
</div>
