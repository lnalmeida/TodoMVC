@model TodoMVC.Models.Todo

@{
    ViewData["Title"] = "Create a new to do";
}

<h1>Create a New To Do</h1>

<h4>Todo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedDate" class="control-label">Date</label>
                <input type="date" asp-for="CreatedDate" class="form-control w-50" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-check form-switch my-2">
                <label class="form-check-label" for="flexSwitchCheckDefault">
                    <input class="form-check-input" type="checkbox" role="switch" asp-for="IsCompleted">Completed?
                </label>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <input type="submit" value="Create" class="btn btn-md btn-primary px-4"/>
                    </div>
                    <div class="col d-flex align-items-start">
                        <a class="btn btn-md btn-danger px-4 " asp-action="Index">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
