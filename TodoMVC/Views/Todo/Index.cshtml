@model IEnumerable<TodoMVC.Models.Todo>

@{
    ViewData["Title"] = "To Do List";

    
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-sm btn-primary" asp-action="Create">Create New To Do</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th class="col-sm-2">
                <strong>#</strong>
            </th>
            <th>
               Title
            </th>
            <th>
                Description
            </th>
            <th>
               Date
            </th>
            <th>
               Completed?
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var todo in Model) {
        <tr>
            <td>
                <strong>@todo.Id</strong>
            </td>
            <td>
                @todo.Title)
            </td>
            <td>
                @todo.Description)
            </td>
            <td>
                @todo.CreatedDate.Date.ToString("dd-MM-yyyy")
            </td>
            <td>
                <div>
                    @if (todo.IsCompleted)
                    {
                        <span class="badge textwhite bg-success">Completed</span>
                    }
                    else
                    {
                        <span class="badge text-white bg-danger">Pending</span>
                    }
                </div>
            </td>
            <td>
                <a class="btn btn-sm btn-primary fw-bold" asp-action="Details" asp-route-id="@todo.Id">
                    <i data-feather="menu"></i>
                    Details
                </a> 
                <a class="btn btn-sm btn-warning fw-bold" asp-action="Edit" asp-route-id="@todo.Id">
                        <i data-feather="edit-2"></i>
                    Edit
                </a> 
                <a class="btn btn-sm btn-danger fw-bold" asp-action="Delete" asp-route-id="@todo.Id">
                        <i data-feather="trash-2"></i>
                    Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
